    <%= check_box_tag 'music[genre][]', 'Pop', checked('Pop'), id: 'genre_pop'%>

    <%= label_tag 'genre_rock', 'Rock' %>
    <%= check_box_tag 'music[genre][]', 'Rock', checked('Rock'), id: 'genre_rock'%>

    <%= label_tag 'genre_classic', 'Classic' %>
    <%= check_box_tag 'music[genre][]', 'Classic', checked('Classic'), id: 'genre_classic'%>
  </div>
  <div class="field">
    <%= f.label :artist %><br>
    <%= f.text_field :artist %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
